CON
  _clkmode = xtal1+pll16x
  _xinfreq = 5_000_000

OBJ
  ml : "matrixLib"

PUB Main
  ml.Init

  ml.Draw(@chaoskueste)
  waitcnt(cnt+clkfreq)
  scroll_r(@chaoskueste,@ende)
  repeat
    waitcnt(cnt+clkfreq)
    scroll_l(@start,@ende)
    waitcnt(cnt+clkfreq)
    scroll_r(@start,@ende)

PUB scroll_r(von,bis) | i,l
  l := (bis-von)/2 - 24*ml.numMs
  repeat i from 0 to l
    ml.Draw(von+2*i)
    waitcnt(cnt+clkfreq/60)

PUB scroll_l(von,bis) | i,l
  l := (bis-von)/2 - 24*ml.numMs
  repeat i from l to 0
    ml.Draw(von+2*i)
    waitcnt(cnt+clkfreq/60)

